<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="HP_MSA.NavBar">
	<ContentView.Content>
        <Grid BackgroundColor="#004770">
            <Grid.Padding>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="Android" Value="0,0,0,0" />
                    <On Platform="iOS" Value="20,0,0,0" />
                </OnPlatform>
            </Grid.Padding>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="20" />
            </Grid.ColumnDefinitions>
            <Button Image="back.png" Grid.Row="0" Grid.Column="0" />
            <Button Image="search.png" Grid.Row="0" Grid.Column="1" />
            <Button Text="Switch" Grid.Row="0" Grid.Column="2" />
            <Button Image="user.png" Grid.Row="0" Grid.Column="3" />
        </Grid>    
	</ContentView.Content>
</ContentView>
